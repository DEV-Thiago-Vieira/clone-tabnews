{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Node Version",
      "type": "shell",
      "command": "source /usr/local/share/nvm/nvm.sh && nvm install && nvm use",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "showReuseMessage": false,
        "close": true
      }
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "source /usr/local/share/nvm/nvm.sh && nvm use && npm run dev",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
